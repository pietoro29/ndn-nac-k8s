apiVersion: v1
kind: ConfigMap
metadata:
  name: config-{{ node.name }}
data:
  nlsr.conf: |
    {{ nlsr_conf | indent(4) }}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ node.name }}
spec:
  selector:
    app: {{ node.name }}
  ports:
    - protocol: TCP
      port: 6363
      name: nfd
  clusterIP: None

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ node.name }}
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{ node.name }}
  template:
    metadata:
      labels:
        app: {{ node.name }}
    spec:
      containers:
        - name: ndn-node
          image: icekarinn/ndn-all:v1.0
          command: ["/bin/bash", "/scripts/entrypoint.sh", "{{ node.name }}"]
          env:
            - name: NODE_NAME
              value: "{{ node.name }}"
            - name: NEIGHBORS
              value: "{% for n in node.neighbors %}{{ n.name }}:{{ n.cost }}{{ ',' if not loop.last }}{% endfor %}"
            - name: SECURITY_MODE
              value: "{{ security.mode }}"
          securityContext:
            capabilities:
              add: ["NET_ADMIN"]
          volumeMounts:
            - name: scripts-vol
              mountPath: /scripts
            - name: nlsr-config-vol
              mountPath: /bootstrap/nlsr
            {% if security.mode == 'strict' %}
            - name: secret-vol
              mountPath: /etc/secret
              readOnly: true
            - name: trust-anchor-vol
              mountPath: /etc/trust-anchor
              readOnly: true
            {% endif %}
      volumes:
        - name: scripts-vol
          configMap:
            name: ndn-scripts
            defaultMode: 0755
        - name: nlsr-config-vol
          configMap:
            name: config-{{ node.name }}
        {% if security.mode == 'strict' %}
        - name: secret-vol
          secret:
            secretName: sec-{{ node.name }}
        - name: trust-anchor-vol
          secret:
            secretName: ndn-trust-anchor
        {% endif %}

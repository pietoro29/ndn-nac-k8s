apiVersion: v1
kind: ServiceAccount
metadata:
  name: nac-installer-sa
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: nac-installer-role
rules:
- apiGroups: [""]
  resources: ["pods", "pods/exec"]
  verbs: ["get", "list", "create"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: nac-installer-binding
subjects:
- kind: ServiceAccount
  name: nac-installer-sa
roleRef:
  kind: Role
  name: nac-installer-role
  apiGroup: rbac.authorization.k8s.io
